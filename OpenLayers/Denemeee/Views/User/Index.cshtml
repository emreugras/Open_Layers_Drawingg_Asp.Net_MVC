@{
    Layout = null;
}
@if (Session["u_name"] == null)
{
    <!doctype html>
    <html lang="tr">
    <head>

        <meta charset="utf-8">
        @*<script src="~/Scripts/jquery-3.7.1.js"></script>
            <script src="~/login-form-19/js/._popper.js"></script>
            <script src="~/login-form-19/js/._bootstrap.min.js"></script>
            <script src="~/login-form-19/js/._main.js"></script>
            <script src="~/Scripts/UsersAjax.js"></script>*@
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="~/login-form-19/css/style.css">

    </head>
    <body>
        <section class="ftco-section" style="padding:0;margin:0;">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">

                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap py-5">
                            <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/be.jpeg);"></div>
                            <h3 class="text-center mb-0">Hoşgeldiniz</h3>
                            <p class="text-center">Lütfen Bilgileri Doğrulayınız</p>
                            @using (Html.BeginForm("Index", "User", FormMethod.Post))
                            {
                                <div class="form-group">
                                    <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                    <input name="u_name" type="text" class="form-control" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group">
                                    <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                    <input name="u_pswd" type="password" class="form-control" placeholder="Şifre" required>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-100 text-md-right">
                                        <a href="#">Parolamı Unuttum</a>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button id="button1" type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş</button>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>



    </body>
</html>
}
